{%- if section.settings.enable_bar -%}
    <section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="announcement-bar" class="section-picto-advantages {% unless section.settings.display-mobile %} desktop-only {% endunless %}">
      <div class="container-small">
        <div class="grid relative">
           {% for block in section.blocks %}
            <div class="1/3--lap-and-up grid__cell PictoAdvantage__border">
              <div class="PictoAdvantage__block">
                <div class="PictoAdvantage__image">
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
                </div>
                <div class="PictoAdvantage__text">
                  <h2 class="u-h6">{{ block.settings.title }}</h2>
                </div>
              </div>
           </div>
          {% endfor %}
        </div>
      </div>
    </section>
    <style>
      #section-{{ section.id }} {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
      }
    </style>
{%- endif -%}
 
{% schema %}
{
  "name": "Picto advantages",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable section",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "display-mobile",
      "label": "Display in mobile",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "picto",
      "name": "Picto",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Picto"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Homepage",
      "name": "Picto advantages",
      "settings": {},
      "blocks": [
        {
          "type": "picto"
        },
        {
          "type": "picto"
        },
        {
          "type": "picto"
        }
      ]
    }
  ]
}
{% endschema %}
