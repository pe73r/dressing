<section class="Section" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="image-block">
  <div class="container-medium">
     <div class="grid {% if section.settings.reverse %} grid--rev {% endif %}">
       <div class="2/3--lap-and-up grid__cell">
         {% if section.settings.image-2 != blank %}
           <img class="Image--lazyLoad {% if section.settings.image-2-mobile != blank %} desktop-only {% endif %}" src="{{ section.settings.image-2 | img_url:'master' }}" alt="{{ section.settings.image-2.alt }}">
         {% endif %}
         {% if section.settings.image-2-mobile != blank %}
           <img class="Image--lazyLoad mobile-only" src="{{ section.settings.image-2-mobile | img_url:'master' }}" alt="{{ section.settings.image-2.alt }}">
         {% endif %}
       </div>
       <div class="1/3--lap-and-up grid__cell">
         {% if section.settings.image != blank %}
           <img class="Image--lazyLoad {% if section.settings.image-mobile != blank %} desktop-only {% endif %}" src="{{ section.settings.image | img_url:'master' }}" alt="{{ section.settings.image.alt }}">
         {% endif %}
         {% if section.settings.image-mobile != blank %}
           <img class="Image--lazyLoad mobile-only" src="{{ section.settings.image-mobile | img_url:'master' }}" alt="{{ section.settings.image.alt }}">
         {% endif %}
       </div>
     </div>
  </div>
</section>

{% schema %}
{
  "name": "Image block",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse blocks",
      "default": false,
      "info": "only in desktop"
    },
    {
      "type": "header",
      "content": "image 1/3"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image 1/3",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "image_picker",
      "id": "image-mobile",
      "label": "Image mobile",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "header",
      "content": "image 2/3"
    },
    {
      "type": "image_picker",
      "id": "image-2",
      "label": "Image 2/3",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "image_picker",
      "id": "image-2-mobile",
      "label": "Image mobile",
      "info": "1200 x 1200px .png recommended"
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Image Block",
      "settings": {}
    }
  ]
}
{% endschema %}
