<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-featured-products" class="Section Section--spacingNormal featured-products">
  <div class="container-medium container-mobile">
    {% if section.settings.title != blank %}
      <div class="CollectionList__Header SectionHeader desktop-only align-center">
        <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title }}</h2>
      </div>
    {% endif %}
   <div class="main-carousel carousel" data-flickity='{ "cellAlign": "left", "wrapAround": true, "groupCells": true, "contain": true, "pageDots": {{ section.settings.display-dots }},  "prevNextButtons": {{ section.settings.display-arrows }}, "arrowShape": {"x0": 10,"x1": 55, "y1": 45,"x2": 60, "y2": 40,"x3": 20} }'>
     {% for block in section.blocks %}
       {%  assign product = all_products[block.settings.product] %} 
       {% render 'product-thumbnail', product: product %}
     {% endfor %}
   </div>
   {% if section.settings.button != blank %}
     <div class="FeaturedCollectionButton">
       <a class="Button Button--primary" href="{{ section.settings.url }}">{{ section.settings.button }}</a>
     </div>
   {% endif %}
 </div>
</section>
{% schema %}
{
  "name": "Featured products",
  "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Section title",
            "default": "NOUVEAUTÃ‰S"
          },
          {
             "type": "header",
             "content": "Carrousel options"
          },
          {
            "type": "checkbox",
            "id": "display-arrows",
            "label": "display arrows",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "display-dots",
            "label": "display dots",
            "default": true
          },
          {
            "type": "header",
            "content": "button"
          },
          {
            "type": "text",
            "id": "button",
            "label": "Button text",
            "default": "Voir plus"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Button link"
          }
  ],
  "blocks": [
    {
      "type": "Product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "product"
        }

      ]
    }
  ],
  "presets": [
    {
      "name":  "Featured products",
      "category":  "Product"
    }
  ]
}
{% endschema %}
